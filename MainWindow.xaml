<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label x:Name="feladat2" Grid.RowSpan="3"/>
            <ListBox x:Name="lberedmenyek" Grid.Column="1" Grid.RowSpan="3">
                <ListBoxItem  Content="Itt fognak megjelenni az eredmények:"/>
            </ListBox>
            <Label Content="Művelet:" Grid.Column="2"/>
            <TextBox x:Name="tbxmuvelet"  Grid.Column="2" Grid.Row="1"/>
            <Button  Content="Számol" Click="Button_Click" Grid.Column="2" Grid.Row="2"/>
        </Grid>
    </Viewbox>
</Window>
